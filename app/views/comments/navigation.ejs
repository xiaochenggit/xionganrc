	<!-- Button trigger modal -->
	<!-- Modal -->
	<div class="modal fade" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">用户登录</h4>
	      </div>
	      <div class="modal-body">
	        <form method="post" action="/user/signin">
			  <div class="form-group">
			    <label for="userName">用户名</label>
			    <input type="text" class="form-control" id="userName" placeholder="用户名" name="user[name]">
			  </div>
			  <div class="form-group">
			    <label for="password">Password</label>
			    <input type="password" class="form-control" id="password" placeholder="密码" name='user[password]'>
			  </div>
			  <!-- <div class="form-group">
			    <label for="exampleInputFile">File input</label>
			    <input type="file" id="exampleInputFile">
			    <p class="help-block">Example block-level help text here.</p>
			  </div>
			  <div class="checkbox">
			    <label>
			      <input type="checkbox"> Check me out
			    </label>
			  </div> -->
			  <button type="submit" class="btn btn-default">Submit</button>
			</form>
	      </div>
	      <div class="modal-footer">
	        <a type="button" class="btn btn-default" href="/user/signup">没有账号?</a>
	        <!-- <button type="button" class="btn btn-primary">登录</button> -->
	      </div>
	    </div>
	  </div>
	</div>
	<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">用户注册</h4>
	      </div>
	      <div class="modal-body">
	        <form method="post" action="/user/signup" id="userSignup" enctype="multipart/form-data" >
			  <div class="form-group required">
			    <label for="userName">用户名<span>*</span></label>
			    <input type="text" class="form-control" id="userName" placeholder="请输入用户名" name="user[name]" value="">
			  </div>
			  <div class="form-group required">
			    <label for="passwordOne">密码<span>*</span></label>
			    <input type="password" class="form-control" id="passwordOne" placeholder="请输入密码" name='user[password]'>
			  </div>
			  <div class="form-group required">
			    <label for="passwordTwo">确认密码<span>*</span></label>
			    <input type="password" class="form-control" id="passwordTwo" placeholder="再次输入密码" >
			  </div>
			  <div class="form-group required">
			    <label for="email">邮箱<span>*</span></label>
			    <input type="email" class="form-control" id="email" placeholder="请输入邮箱" name='user[email]'>
			  </div>
			  <div class="form-group">
			    <label for="question">请设置密保问题</label>
			    <input type="text" class="form-control" id="question" placeholder="输入问题" name='user[question]'>
			  </div>
			  <div class="form-group">
			    <label for="key">请设置答案</label>
			    <input type="text" class="form-control" id="key" placeholder="请输入答案" name='user[key]'>
			  </div>
			  <div class="form-group">
			    <label for="exampleInputFile">上传头像</label>
			    <input type="file" id="exampleInputFile" name="userImg">
			    <p class="help-block">最好为64*64的</p>
			  </div>
			  <a  class="btn btn-default" id="signupSubmit">Submit</a>
			</form>
	      </div>
	      <div class="modal-footer">
	        <a href="/user/signin" class="btn btn-default">已有账号</a>
	        <!-- <button type="button" class="btn btn-primary">注册</button> -->
	      </div>
	    </div>
	  </div>
	</div>
	<div class="modal fade" id="changeUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">修改资料</h4>
	      </div>
	      <div class="modal-body">
	      	<% if (user) { %>
	      	<form method="post" action="/user/change" id="userSignup" enctype="multipart/form-data" >
	          <input type="hidden" name = 'user[_id]' value="<%= user._id %>">
	          <div class="form-group">
			    <label for="exampleInputFile">上传头像</label>
			    <input type="file" id="exampleInputFile" name="userImg">
			    <p class="help-block">最好为64*64的</p>
			  </div>
			  <div class="form-group">
			  	<p>性别</p>
			  	<% for (var key in sex) { %>
			  		<% if (key == user.sex ) { %>
			  			<input type="radio" name="user[sex]" value="<%= key %>" checked> <%= sex[key] %>
			  		<% } else { %>
			  			<input type="radio" name="user[sex]" value="<%= key %>"> <%= sex[key] %>
			  		<% } %>
			  	<% } %>
			  </div>
			  <div class="form-group">
				<p>爱好</p>
				<% for (var key in hobby) { %>
				 <% if (user.hobby.indexOf(key) > -1) { %>
					<label class="checkbox-inline">
							<input type="checkbox"  value="<%= key %>" name='user[hobby]' checked> <%= hobby[key] %>
					</label>
			     <% } else { %>
					<label class="checkbox-inline">
  						<input type="checkbox"  value="<%= key %>" name='user[hobby]'> <%= hobby[key] %>
					</label>
				 <% } %>
				<% } %>
			  </div>
			  <div class="form-group">
			    <label for="school">毕业院校</label>
			    <input type="text" class="form-control" id="school" placeholder="你的毕业院校" name='user[school]' value="<%= user.school %>">
			  </div>
			  <div class="form-group">
			    <label for="major">专业</label>
			    <input type="text" class="form-control" id="major" placeholder="输入你的专业" name='user[major]' value="<%= user.major %>">
			  </div>
			  <div class="form-group">
			  	<label for="des">个人介绍</label>
				<textarea class="form-control" rows="3" id="des" name="user[des]"><%= user.des %>
				</textarea>
			  </div>
			  <div class="form-group">
			  	<label for="motto">座右铭</label>
				<textarea class="form-control" rows="3" id="motto" name="user[motto]"><%= user.motto %>
				</textarea>
			  </div>
			  <div class="form-group">
			  	<label for="message">主人寄语</label>
				<textarea class="form-control" rows="3" id="message" name="user[message]"><%= user.message %>
				</textarea>
			  </div>
			  <button class="btn btn-default" type="submit">Submit</button>
			</form>
	       <% } %>
	      </div>
	      <div class="modal-footer">
	        <a href="/user/signin" class="btn btn-default">已有账号</a>
	      </div>
	    </div>
	  </div>
	</div>
</div>