<%- include('../comments/header')%>
<div class="container">
	<h2><%= title %></h2>
	<div class="row">
		<div class="col-md-5 col-ms-10">
			<form method="post" action="/user/signup" id="userSignup" enctype="multipart/form-data" >
			  <div class="form-group required">
			    <label for="userName">用户名<span>*</span></label>
			    <input type="text" class="form-control" id="userName" placeholder="请输入用户名" name="user[name]" value="">
			  </div>
			  <div class="form-group required">
			    <label for="passwordOne">密码<span>*</span></label>
			    <input type="password" class="form-control" id="passwordOne" placeholder="请输入密码" name='user[password]'>
			  </div>
			  <div class="form-group required">
			    <label for="passwordTwo">确认密码<span>*</span></label>
			    <input type="password" class="form-control" id="passwordTwo" placeholder="再次输入密码" >
			  </div>
			  <div class="form-group required">
			    <label for="email">邮箱<span>*</span></label>
			    <input type="email" class="form-control" id="email" placeholder="请输入邮箱" name='user[email]'>
			  </div>
			  <div class="form-group">
			    <label for="question">请设置密保问题</label>
			    <input type="text" class="form-control" id="question" placeholder="输入问题" name='user[question]'>
			  </div>
			  <div class="form-group">
			    <label for="key">请设置答案</label>
			    <input type="text" class="form-control" id="key" placeholder="请输入答案" name='user[key]'>
			  </div>
			  <div class="form-group">
			    <label for="exampleInputFile">上传头像</label>
			    <input type="file" id="exampleInputFile" name="userImg">
			    <p class="help-block">最好为64*64的</p>
			  </div>
			  <a  class="btn btn-default" id="signupSubmit">Submit</a>
			</form>
		</div>
	</div>
</div>
<%- include('../comments/footer')%>