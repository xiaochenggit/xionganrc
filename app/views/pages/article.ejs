<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%= article.title %></title>
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
	<!-- <link rel="stylesheet" type="text/css" href="/css/iconfont.css"> -->
	<link rel="stylesheet" type="text/css" href="/css/index.css">
	<script type="text/javascript" src='/js/jquery-2.1.4.min.js'></script>
	<script type="text/javascript" src='/js/bootstrap.min.js'></script>
	<script type="text/javascript" src='/js/moment.js'></script>
	<script type="text/javascript" src='/js/index.js'></script>
	<script type="text/javascript" src=""></script>
</head>
<body>
<%- include('../comments/navigation')%>
<div class="container articel-cont">
	<div class="head">
		<h1 class="title text-center"><%= article.title %></h1>
		<div class="des text-center">
			<span><a href="/user/details?id=<%= article.author._id %>">作者：<%= article.author.name %></a></span>
			<span>发布时间: 
				<span class="timeSpan" time="<%=article.updateAt %>" >
                    <%= moment(parseInt(article.updateAt)).fromNow() %>
                </span>
			</span>
			<!-- <span>更新: <%=moment(article.createAt).format('YYYY/MM/DD HH:mm:ss') %></span> -->
		</div>
	</div>
	<div class="desc">
		<% if (!isCollection) { %>
		<div class="lick" article-id="<%= article._id %>">
			<span class="ds"><i class='iconfont icon-xin'></i>喜欢</span>
			<span class="length" id="length"><%= article.collectionUsers.length %></span>
		</div>
		<% } else { %>
		<div class="lick collectioned" article-id="<%= article._id %>">
			<span class="ds"><i class='iconfont icon-xin'></i>喜欢</span>
			<span class="length" id="length"><%= article.collectionUsers.length %></span>
		</div>
		<% } %>
		<span class="browseUsers">浏览人数:<%= article.browseUsers.length %></span>
		<span class="collec pull-right">
			<% if (!isCollection) { %>
			<span id="collection">收藏</span><span class="glyphicon glyphicon-star" aria-hidden="true" article-id="<%= article._id %>"></span>
			<% } else { %>
			<span id="collection">已收藏(<%= article.collectionUsers.length %>)</span><span class="glyphicon glyphicon-star collectioned" aria-hidden="true" article-id="<%= article._id %>"></span>
			<i class='iconfont icon-xin'></i>
			<% } %>
		</span>
	</div>
	<!-- <% if (article.browseUsers && article.browseUsers.length > 0) { %>
	  <% article.browseUsers.forEach(function(item,index){ %>
		   <p>用户名:<%= item.user.name %>   </p>
		   <p>id : <%= item.user._id %></p> 
		   <p>time :<%= item.time %>   </p> 
	  <% }) %>
	<% } %> -->
	<div class="content" id="content" style="display: none;">
		<%= article.content %>
	</div>
</div>
<script type="text/javascript">
	$(function (){
		$("#content").html($("#content").text()).show();
	})
</script>
<%- include('../comments/footer')%>